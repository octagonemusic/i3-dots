[global]
    # Display
    monitor = 0
    follow = mouse
    width = 300
    height = (0, 300)
    origin = top-right
    offset = (10, 40)
    notification_limit = 0

    # Progress bar
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    # Appearance
    transparency = 0
    separator_height = 3
    padding = 15
    horizontal_padding = 15
    text_icon_padding = 0
    frame_width = 3
    frame_color = "#cba6f7"
    separator_color = "#cba6f7"
    sort = yes
    idle_threshold = 120
    scale = 1.15

    # Text
    font = JetBrains Mono 10
    line_height = 4
    markup = full
    format = "<span size='12000'><b>%s</b></span>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false

    # History
    sticky_history = yes
    history_length = 20

    # Misc/Advanced
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 12
    ignore_dbusclose = false
    force_xinerama = false

    # Mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    # Volume/Brightness notifications
    [volume]
        appname = "volume"
        summary = "*"
        format = "<span size='13000'><b>%s</b></span>"
        background = "#1e1e2e"
        foreground = "#89b4fa"
        frame_color = "#89b4fa"
        highlight = "#89b4fa"
        alignment = center
        timeout = 1

    [brightness]
        appname = "brightness"
        summary = "*"
        format = "<span size='13000'><b>%s</b></span>"
        background = "#1e1e2e"
        foreground = "#f9e2af"
        frame_color = "#f9e2af"
        highlight = "#f9e2af"
        alignment = center
        timeout = 1

[experimental]
    per_monitor_dpi = false

